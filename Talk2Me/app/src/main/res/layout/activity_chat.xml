<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_alternate2"
    tools:context=".activity.ChatActivity">

    <include
        android:id="@+id/tb_conversa"
        layout="@layout/toolbar">
    </include>

    <ListView
        android:id="@+id/lv_conversas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_below="@id/tb_conversa"
        android:layout_above="@id/ll_mensagem"></ListView>

    <LinearLayout
        android:id="@+id/ll_mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

        <ImageView
            android:maxHeight="0dp"
            android:maxWidth="100dp"
            android:id="@+id/overwriteMe"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_clear"/>

        <EditText
            android:id="@+id/edit_mensagem"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="Mensagem"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"/>

        <ImageButton
            android:id="@+id/bt_mic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mic" />

        <ImageButton
            android:id="@+id/bt_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_add"/>


        <ImageButton
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_send"/>

    </LinearLayout>

</RelativeLayout>





















